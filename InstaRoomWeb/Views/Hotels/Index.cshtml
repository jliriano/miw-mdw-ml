@model IEnumerable<InstaRoomWeb.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Hotel 
        </th>
        <th>
            Nombre Director
        </th>
        <th>
           Dirección Postal
        </th>
        <th>
            Foto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_hotel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_director)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion_postal)
        </td>
        <td>
            <img src="~/Content/imagenes/@item.imagen_hotel" />
            @Html.DisplayFor(modelItem => item.imagen_hotel)
        </td>
       
    </tr>
}

</table>
